
{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "customTemplates": [
        {
            "name": "blank",
            "title": "Blank",
            "postTypes": ["page", "post"]
        },
        {
            "name": "full-width",
            "title": "Full Width",
            "postTypes": ["page"]
        },
        {
            "name": "landing-page",
            "title": "Landing Page",
            "postTypes": ["page"]
        }
    ],
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultGradients": false,
            "defaultPalette": false,
            "palette": [
                {
                    "color": "#7c3aed",
                    "name": "Primary",
                    "slug": "primary"
                },
                {
                    "color": "#a855f7",
                    "name": "Secondary",
                    "slug": "secondary"
                },
                {
                    "color": "#f59e0b",
                    "name": "Accent",
                    "slug": "accent"
                },
                {
                    "color": "#1e293b",
                    "name": "Text Dark",
                    "slug": "text-dark"
                },
                {
                    "color": "#64748b",
                    "name": "Text Light",
                    "slug": "text-light"
                },
                {
                    "color": "#ffffff",
                    "name": "Background",
                    "slug": "background"
                },
                {
                    "color": "#f8fafc",
                    "name": "Background Light",
                    "slug": "background-light"
                },
                {
                    "color": "#e5e7eb",
                    "name": "Border",
                    "slug": "border"
                },
                {
                    "color": "#10b981",
                    "name": "Success",
                    "slug": "success"
                },
                {
                    "color": "#ef4444",
                    "name": "Error",
                    "slug": "error"
                },
                {
                    "color": "#000000",
                    "name": "Black",
                    "slug": "black"
                },
                {
                    "color": "#6b7280",
                    "name": "Gray",
                    "slug": "gray"
                }
            ],
            "gradients": [
                {
                    "gradient": "linear-gradient(135deg, #7c3aed 0%, #a855f7 100%)",
                    "name": "Primary Gradient",
                    "slug": "primary-gradient"
                },
                {
                    "gradient": "linear-gradient(135deg, #f59e0b 0%, #f97316 100%)",
                    "name": "Accent Gradient",
                    "slug": "accent-gradient"
                },
                {
                    "gradient": "linear-gradient(135deg, #1e293b 0%, #374151 100%)",
                    "name": "Dark Gradient",
                    "slug": "dark-gradient"
                },
                {
                    "gradient": "linear-gradient(135deg, #f8fafc 0%, #ffffff 100%)",
                    "name": "Light Gradient",
                    "slug": "light-gradient"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true,
            "dropCap": false,
            "fontSizes": [
                {
                    "name": "Extra Small",
                    "size": "12px",
                    "slug": "x-small"
                },
                {
                    "name": "Small",
                    "size": "14px",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "16px",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "18px",
                    "slug": "large"
                },
                {
                    "name": "Extra Large",
                    "size": "24px",
                    "slug": "x-large"
                },
                {
                    "name": "Huge",
                    "size": "32px",
                    "slug": "huge"
                },
                {
                    "name": "Gigantic",
                    "size": "48px",
                    "slug": "gigantic"
                }
            ],
            "fontFamilies": [
                {
                    "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "name": "Inter",
                    "slug": "inter"
                },
                {
                    "fontFamily": "Roboto, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
                    "name": "Roboto",
                    "slug": "roboto"
                },
                {
                    "fontFamily": "'Open Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
                    "name": "Open Sans",
                    "slug": "open-sans"
                },
                {
                    "fontFamily": "Montserrat, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
                    "name": "Montserrat",
                    "slug": "montserrat"
                },
                {
                    "fontFamily": "Poppins, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
                    "name": "Poppins",
                    "slug": "poppins"
                },
                {
                    "fontFamily": "'Playfair Display', Georgia, serif",
                    "name": "Playfair Display",
                    "slug": "playfair"
                }
            ]
        },
        "spacing": {
            "customSpacing": true,
            "spacingSizes": [
                {
                    "name": "XS",
                    "size": "0.5rem",
                    "slug": "xs"
                },
                {
                    "name": "Small",
                    "size": "1rem",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "2rem",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "3rem",
                    "slug": "large"
                },
                {
                    "name": "XL",
                    "size": "4rem",
                    "slug": "xl"
                },
                {
                    "name": "XXL",
                    "size": "6rem",
                    "slug": "xxl"
                }
            ],
            "units": ["px", "em", "rem", "vh", "vw", "%"]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        },
        "border": {
            "radius": true,
            "color": true,
            "style": true,
            "width": true
        },
        "dimensions": {
            "aspectRatio": true,
            "minHeight": true
        },
        "position": {
            "sticky": true
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": true
                },
                "color": {
                    "background": true,
                    "text": true
                },
                "typography": {
                    "fontWeight": true
                }
            },
            "core/heading": {
                "typography": {
                    "fontWeight": true,
                    "lineHeight": true
                }
            },
            "core/image": {
                "lightbox": {
                    "enabled": true
                }
            },
            "core/cover": {
                "spacing": {
                    "padding": true
                }
            },
            "core/group": {
                "spacing": {
                    "padding": true,
                    "margin": true
                }
            },
            "core/columns": {
                "spacing": {
                    "padding": true,
                    "margin": true
                }
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--text-dark)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "2rem",
            "padding": {
                "top": "0",
                "right": "var(--wp--preset--spacing--medium)",
                "bottom": "0",
                "left": "var(--wp--preset--spacing--medium)"
            }
        },
        "elements": {
            "button": {
                "border": {
                    "radius": "8px"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--background)"
                },
                "typography": {
                    "fontWeight": "600",
                    "fontSize": "var(--wp--preset--font-size--medium)"
                },
                "spacing": {
                    "padding": {
                        "top": "12px",
                        "right": "24px",
                        "bottom": "12px",
                        "left": "24px"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--secondary)"
                    }
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary)"
                    }
                }
            },
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--inter)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--text-dark)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "clamp(2rem, 5vw, 3.5rem)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "clamp(1.75rem, 4vw, 2.5rem)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "clamp(1.5rem, 3vw, 2rem)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "clamp(1.25rem, 2.5vw, 1.5rem)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "clamp(1.125rem, 2vw, 1.25rem)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "clamp(1rem, 1.5vw, 1.125rem)"
                }
            }
        },
        "blocks": {
            "core/paragraph": {
                "typography": {
                    "lineHeight": "1.6"
                },
                "color": {
                    "text": "var(--wp--preset--color--text-light)"
                }
            },
            "core/heading": {
                "typography": {
                    "fontWeight": "700"
                }
            },
            "core/button": {
                "border": {
                    "radius": "8px"
                },
                "spacing": {
                    "padding": {
                        "top": "12px",
                        "right": "24px",
                        "bottom": "12px",
                        "left": "24px"
                    }
                }
            },
            "core/cover": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--large)",
                        "right": "var(--wp--preset--spacing--medium)",
                        "bottom": "var(--wp--preset--spacing--large)",
                        "left": "var(--wp--preset--spacing--medium)"
                    }
                }
            },
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--medium)",
                        "right": "var(--wp--preset--spacing--medium)",
                        "bottom": "var(--wp--preset--spacing--medium)",
                        "left": "var(--wp--preset--spacing--medium)"
                    }
                }
            },
            "core/columns": {
                "spacing": {
                    "blockGap": "var(--wp--preset--spacing--medium)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        },
        {
            "name": "sidebar",
            "title": "Sidebar",
            "area": "uncategorized"
        }
    ]
}
